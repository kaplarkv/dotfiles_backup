# pacman
alias spm='sudo pacman'

# aur

# ls
alias ls='ls -F --color=always'
alias la='ls -A'
alias ll='ls -l'

# grep
alias grep='grep --color=always'

# wireless
alias wireless='sudo wifi-menu wlp2s0'

# youtube-dl
alias youtube-mp3='youtube-dl -x --audio-format mp3'

# moving around
alias cdb='cd -'
alias cls='clear;ls'
alias cla='clear;la'
alias cll='clear;ll'
alias -g ...='../../'
alias -g ....='../../../'
alias -g .....='../../../../'

# vim
alias ve='vim ~/.vimrc'

# submarine
alias sub='submarine -l en'

# transmission-cli
alias torstart='transmission-daemon'
alias toradd='transmission-remote --add'
alias torlist='transmission-remote --list'
alias toropen='firefox http://localhost:9091'
alias torexit='transmission-remote --exit'
